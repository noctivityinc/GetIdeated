!!!
%html

  %head
    %title
    = yield(:title) || "Get Ideated.com | Focus. Plan. Dream. Do."
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    %link{:href => "images/favicon.gif", :rel => "shortcut icon", :type => "image/gif"}
    = render 'layouts/head'
    = stylesheet_link_tag "application"
    = javascript_include_tag :application
    = csrf_meta_tag
    = yield(:head)
    

  %body{:class => "#{controller.controller_name}"}     
    #wrapper
      .center
        #container
          #header
            = link_to image_tag('logo.png'), root_url
            
            - if user_signed_in?
              #breadcrumbs
                = render_breadcrumbs
            - else
              = render 'layouts/main_navigation'

            #user_nav         
              - if user_signed_in?
                Signed in as 
                = link_to current_user.name, edit_user_registration_path(current_user)
                \. Not you?
                = link_to "Sign out", destroy_user_session_path, :method => :delete

          #content
            #flash
              - flash.each do |name, msg|
                = content_tag :div, msg, :id => "flash_#{name}"

            #page_header
              .titles
                - if show_title?
                  %h1.title= yield(:title)

                - if show_subtitle?
                  %h2.subtitle= yield(:subtitle)
              .placeholder
                = yield(:placeholder)

            = yield

            .horizontal-line
            = render 'layouts/footer'
            = render 'layouts/copyright'

      

      