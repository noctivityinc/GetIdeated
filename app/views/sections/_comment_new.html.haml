.comment
  .icon
    = gravatar_image_tag(current_user.email.gsub('spam', 'mdeering'), :alt => current_user.name, :gravatar => { :default => :identicon })
  .col
    %b Leave a comment...
    .text
      .header
        Format text with Textile 
        = link_to "(help with Textile)", "http://www.textism.com/tools/textile/", :target => "_blank" 
      = form_for form_url, :remote => true, :html => {'data-comment-list' => url_for(data_comment_list_path)}  do |f|
        = f.text_area :content, :required => true
        .controls
          = link_to "Cancel", '#', :class => "cancel button small round dark-blue"
          = f.submit "Add this Comment", :class => "button small round blue"
  
